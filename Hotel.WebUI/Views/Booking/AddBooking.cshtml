@using HotelProject.WebUI.Dtos.BookingDto
@model CreateBookingDto

<section class="py-5" style="width:100%;">
    <div class="container-xxl">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Rezervasyon Paneli</h6>
            <h1 class="mb-5">Odanızı Şimdi <span class="text-primary text-uppercase">Rezerve Edin</span></h1>
        </div>

        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s"
                             src="~/hotel-html-template/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s"
                             src="~/hotel-html-template/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s"
                             src="~/hotel-html-template/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s"
                             src="~/hotel-html-template/img/about-4.jpg">
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="AddBooking" asp-controller="Booking" novalidate>
                        @Html.AntiForgeryToken()
                        <div class="text-danger mb-2">
                            @Html.ValidationSummary(false)
                        </div>
                        <div class="row g-3">

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" placeholder="Adınız Soyadınız" />
                                    <label asp-for="Name">Ad Soyad</label>
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Mail" class="form-control" placeholder="E-posta Adresiniz" />
                                    <label asp-for="Mail">E-Posta</label>
                                    <span class="text-danger" asp-validation-for="Mail"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="CheckIn" type="date" class="form-control" />
                                    <label asp-for="CheckIn">Giriş Tarihi</label>
                                    <span class="text-danger" asp-validation-for="CheckIn"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="CheckOut" type="date" class="form-control" />
                                    <label asp-for="CheckOut">Çıkış Tarihi</label>
                                    <span class="text-danger" asp-validation-for="CheckOut"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="AdultCount" class="form-select">
                                        <option value="1">1 Yetişkin</option>
                                        <option value="2">2 Yetişkin</option>
                                        <option value="3">3 Yetişkin</option>
                                    </select>
                                    <label asp-for="AdultCount">Yetişkin</label>
                                    <span class="text-danger" asp-validation-for="AdultCount"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="ChildCount" class="form-select">
                                        <option value="0">0 Çocuk</option>
                                        <option value="1">1 Çocuk</option>
                                        <option value="2">2 Çocuk</option>
                                        <option value="3">3 Çocuk</option>
                                    </select>
                                    <label asp-for="ChildCount">Çocuk</label>
                                    <span class="text-danger" asp-validation-for="ChildCount"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="RoomCount" class="form-select">
                                        <option value="1">1 Oda</option>
                                        <option value="2">2 Oda</option>
                                        <option value="3">3 Oda</option>
                                    </select>
                                    <label asp-for="RoomCount">Oda</label>
                                    <span class="text-danger" asp-validation-for="RoomCount"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="SpecialRequest" class="form-control"
                                              style="height: 100px" placeholder="Özel taleplerinizi yazın"></textarea>
                                    <label asp-for="SpecialRequest">Özel İstekler</label>
                                </div>
                            </div>

                            <input type="hidden" asp-for="Status" value="Onay Bekliyor" />

                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">
                                    Rezervasyon Yap
                                </button>
                            </div>

                        </div>
                    </form>
                    <partial name="_ValidationScriptsPartial" />
                </div>
            </div>
        </div>
    </div>
</section>