@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4">
    <table class="table table-sm table-glass-effect">
        <thead>
            <tr>
                <th>#</th>
                <th>Servis Başlığı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServiceId</td>
                    <td>@item.Title</td>
                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger btn-sm">Sil</a></td>
                    <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-success btn-sm">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div> 