@model Hotel.WebUI.Dtos.SubscribeDto.CreateSubscribeDto
<form method="post" asp-action="_SubscribePartial" asp-controller="Defualt" class="newsletter-form">
    <div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="row justify-content-center">
            <div class="col-lg-10 p-1">
                <div class="text-center p-4 p-md-5 newsletter-box">
                    <h4 class="mb-4">Mail <span class="text-primary text-uppercase">Bültenine</span></h4>
                    <div class="position-relative mx-auto" style="max-width:400px;">
                        <input class="form-control w-100 py-3 ps-4 pe-5" type="email" placeholder="Mail adresinizi giriniz" name="Mail" required>
                        <button type="submit" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">
                            Abone Ol
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>