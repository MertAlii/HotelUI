@model CreateNewUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin Giriş - Alkan Studio</title>
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site-admin.css" rel="stylesheet" />
</head>

<body class="h-100">
    <!-- Preloader start -->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!-- Preloader end -->

    <div class="login-wrapper">
        <div class="login-inner">
            <div class="login-content">

                <!-- Header Section -->
                <div class="login-header text-center mb-4">
                    <div class="brand-logo mb-3">
                        <span class="logo-abbr">A</span>
                    </div>
                    <h2 class="login-title">Admin Panel</h2>
                    <p class="login-subtitle">Yönetim paneline giriş yapın</p>
                </div>

                <!-- Login Form -->
                <div class="login-form">
                    <form method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fa fa-user me-2"></i>Kullanıcı Adı
                            </label>
                            <input type="text" name="UserName" asp-for="Name" class="form-control" placeholder="Admin kullanıcı adınızı giriniz" required />
                            <div class="invalid-feedback">
                                Lütfen kullanıcı adınızı giriniz.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fa fa-lock me-2"></i>Şifre
                            </label>
                            <div class="input-group">
                                <input type="password" name="Password" id="password" asp-for="Password" class="form-control" placeholder="Admin şifrenizi giriniz" required />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fa fa-eye" id="eyeIcon"></i>
                                </button>
                            </div>
                            <div class="invalid-feedback">
                                Lütfen şifrenizi giriniz.
                            </div>
                        </div>

                        <div class="d-grid gap-3 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-sign-in-alt me-2"></i>Admin Girişi
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <style>
        .login-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .login-inner {
            width: 100%;
            max-width: 500px;
            background: var(--bg-card);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 3rem;
            box-shadow: 0 20px 40px var(--shadow-color);
        }

        .login-header .logo-abbr {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            font-weight: bold;
            margin-bottom: 1rem;
            animation: logoGlow 3s ease-in-out infinite alternate;
        }

        keyframes logoGlow {
            from

        {
            box-shadow: 0 0 20px rgba(99, 102, 241, 0.3);
        }

        to {
            box-shadow: 0 0 30px rgba(99, 102, 241, 0.6);
        }

        }

        .login-title {
            color: var(--text-primary);
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 2rem;
        }

        .login-subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
            margin-bottom: 0;
        }

        .form-label {
            color: var(--text-secondary);
            font-weight: 600;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
        }

        .form-control {
            background: var(--bg-glass);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            color: var(--text-primary);
            padding: 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background: var(--bg-glass);
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
                color: var(--text-primary);
            }

            .form-control::placeholder {
                color: var(--text-muted);
            }

        .input-group .btn {
            background: var(--bg-glass);
            border: 1px solid var(--border-color);
            border-left: none;
            color: var(--text-secondary);
        }

            .input-group .btn:hover {
                background: var(--bg-tertiary);
                color: var(--text-primary);
                transform: none;
            }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .form-check-label {
            color: var(--text-secondary);
            font-weight: 500;
        }

        .btn {
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px var(--shadow-color);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 1rem 2rem;
        }

        .forgot-password-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .forgot-password-link:hover {
                color: var(--secondary-color);
                text-decoration: underline;
            }

        .feature-card {
            padding: 1.5rem;
            background: var(--bg-glass);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            transition: all 0.3s ease;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-4px);
                border-color: var(--primary-color);
            }

        .feature-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.2rem;
            color: white;
        }

        .feature-card h6 {
            color: var(--text-primary);
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .feature-card p {
            color: var(--text-muted);
            font-size: 0.8rem;
            margin-bottom: 0;
        }

        .invalid-feedback {
            color: var(--danger-color);
        }

        .was-validated .form-control:invalid {
            border-color: var(--danger-color);
        }

        .was-validated .form-control:valid {
            border-color: var(--success-color);
        }

        media (max-width: 768px) {
            .login-inner

        {
            padding: 2rem 1.5rem;
            margin: 1rem;
            max-width: 400px;
        }

        .login-header .logo-abbr {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }

        .login-title {
            font-size: 1.5rem;
        }

        .admin-features {
            margin-top: 3rem !important;
        }

        .feature-card {
            padding: 1rem;
        }

        }
    </style>

    <script>
        // Preloader
        window.addEventListener('load', function() {
            var preloader = document.getElementById('preloader');
            if (preloader) {
                preloader.classList.add('hide');
            }
        });

        // Toggle Password Visibility
        document.getElementById('togglePassword').addEventListener('click', function() {
            const password = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');

            if (password.type === 'password') {
                password.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                password.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        });

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Enter key submission
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const form = document.querySelector('form');
                const submitBtn = document.querySelector('button[type="submit"]');
                if (form && submitBtn) {
                    submitBtn.click();
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>