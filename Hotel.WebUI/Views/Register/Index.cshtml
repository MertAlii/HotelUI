@model CreateNewUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Kayıt Ol - Alkan Studio</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Modern CSS Dosyası -->
    <link href="~/css/site-admin.css" rel="stylesheet" />
</head>

<body class="h-100">
    <!-- Preloader start -->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!-- Preloader end -->

    <div class="register-wrapper">
        <div class="register-inner">
            <div class="register-content">

                <!-- Header Section -->
                <div class="register-header text-center mb-4">
                    <div class="brand-logo mb-3">
                        <span class="logo-abbr">A</span>
                    </div>
                    <h2 class="register-title">Kayıt Ol</h2>
                    <p class="register-subtitle">Yönetim paneline erişim için hesap oluşturun</p>
                </div>

                <!-- Register Form -->
                <div class="register-form">
                    <form method="post" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fa fa-user me-2"></i>Adınız *
                                    </label>
                                    <input type="text" name="Name" asp-for="Name" class="form-control" 
                                           placeholder="Adınızı giriniz" required />
                                    <div class="invalid-feedback">
                                        Lütfen adınızı giriniz.
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fa fa-user me-2"></i>Soyadınız *
                                    </label>
                                    <input type="text" name="Surname" asp-for="Surname" class="form-control" 
                                           placeholder="Soyadınızı giriniz" required />
                                    <div class="invalid-feedback">
                                        Lütfen soyadınızı giriniz.
                                    </div>
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fa fa-at me-2"></i>Kullanıcı Adı *
                            </label>
                            <input type="text" name="UserName" asp-for="UserName" class="form-control" 
                                   placeholder="Kullanıcı adınızı giriniz" required />
                            <div class="invalid-feedback">
                                Lütfen kullanıcı adınızı giriniz.
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fa fa-envelope me-2"></i>E-posta Adresi *
                            </label>
                            <input type="email" name="Mail" asp-for="Mail" class="form-control" 
                                   placeholder="E-posta adresinizi giriniz" required />
                            <div class="invalid-feedback">
                                Lütfen geçerli bir e-posta adresi giriniz.
                            </div>
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fa fa-lock me-2"></i>Şifre *
                                    </label>
                                    <div class="input-group">
                                        <input type="password" name="Password" id="password" asp-for="Password" 
                                               class="form-control" placeholder="Şifrenizi giriniz" required />
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                            <i class="fa fa-eye" id="eyeIcon"></i>
                                        </button>
                                    </div>
                                    <div class="invalid-feedback">
                                        Lütfen şifrenizi giriniz.
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fa fa-lock me-2"></i>Şifre Tekrar *
                                    </label>
                                    <div class="input-group">
                                        <input type="password" name="ConfirmPassword" id="confirmPassword" asp-for="ConfirmPassword" 
                                               class="form-control" placeholder="Şifrenizi tekrar giriniz" required />
                                        <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                            <i class="fa fa-eye" id="eyeIcon2"></i>
                                        </button>
                                    </div>
                                    <div class="invalid-feedback">
                                        Lütfen şifrenizi tekrar giriniz.
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mb-4" role="alert">
                                <i class="fa fa-exclamation-triangle me-2"></i>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="d-grid gap-3 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-user-plus me-2"></i>Hesap Oluştur
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Zaten hesabınız var mı? 
                                <a href="/Login/Index" class="text-primary text-decoration-none">
                                    Giriş yapın
                                </a>
                            </p>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <style>
        .register-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .register-inner {
            width: 100%;
            max-width: 700px;
            background: var(--bg-card);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 3rem;
            box-shadow: 0 20px 40px var(--shadow-color);
        }

        .register-header .logo-abbr {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            font-weight: bold;
            margin-bottom: 1rem;
            animation: logoGlow 3s ease-in-out infinite alternate;
        }

        keyframes logoGlow {
            from { box-shadow: 0 0 20px rgba(74, 144, 226, 0.3); }
            to { box-shadow: 0 0 30px rgba(74, 144, 226, 0.6); }
        }

        .register-title {
            color: var(--text-primary);
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 2rem;
        }

        .register-subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
            margin-bottom: 0;
        }

        .form-label {
            color: var(--text-secondary);
            font-weight: 600;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
        }

        .form-control {
            background: var(--bg-glass);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            color: var(--text-primary);
            padding: 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: var(--bg-glass);
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
            color: var(--text-primary);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .input-group .btn {
            background: var(--bg-glass);
            border: 1px solid var(--border-color);
            border-left: none;
            color: var(--text-secondary);
        }

        .input-group .btn:hover {
            background: var(--bg-tertiary);
            color: var(--text-primary);
            transform: none;
        }

        .btn {
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px var(--shadow-color);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 1rem 2rem;
        }

        .invalid-feedback {
            color: var(--danger-color);
        }

        .was-validated .form-control:invalid {
            border-color: var(--danger-color);
        }

        .was-validated .form-control:valid {
            border-color: var(--success-color);
        }

        .alert-danger {
            background: rgba(226, 74, 74, 0.1);
            border: 1px solid var(--danger-color);
            color: var(--danger-color);
            border-radius: 12px;
        }

        .text-primary {
            color: var(--primary-color) !important;
        }

        .text-muted {
            color: var(--text-muted) !important;
        }

        .text-danger {
            color: var(--danger-color) !important;
        }

        media (max-width: 768px) {
            .register-inner {
                padding: 2rem 1.5rem;
                margin: 1rem;
                max-width: 500px;
            }

            .register-header .logo-abbr {
                width: 60px;
                height: 60px;
                font-size: 1.5rem;
            }

            .register-title {
                font-size: 1.5rem;
            }

            .col-md-6 {
                margin-bottom: 1rem;
            }
        }
    </style>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Preloader
        window.addEventListener('load', function() {
            var preloader = document.getElementById('preloader');
            if (preloader) {
                preloader.classList.add('hide');
            }
        });

        // Toggle Password Visibility
        document.getElementById('togglePassword')?.addEventListener('click', function() {
            const password = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');

            if (password.type === 'password') {
                password.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                password.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        });

        // Toggle Confirm Password Visibility
        document.getElementById('toggleConfirmPassword')?.addEventListener('click', function() {
            const confirmPassword = document.getElementById('confirmPassword');
            const eyeIcon2 = document.getElementById('eyeIcon2');

            if (confirmPassword.type === 'password') {
                confirmPassword.type = 'text';
                eyeIcon2.classList.remove('fa-eye');
                eyeIcon2.classList.add('fa-eye-slash');
            } else {
                confirmPassword.type = 'password';
                eyeIcon2.classList.remove('fa-eye-slash');
                eyeIcon2.classList.add('fa-eye');
            }
        });

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Password matching validation
        document.getElementById('confirmPassword')?.addEventListener('input', function() {
            const password = document.getElementById('password').value;
            const confirmPassword = this.value;
            
            if (password !== confirmPassword) {
                this.setCustomValidity('Şifreler eşleşmiyor');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
</body>
</html>