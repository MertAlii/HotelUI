@using Hotel.WebUI.Dtos.BookingDto
@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Rezervasyon Listesi";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var hasData = Model != null && Model.Any();
    int row = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                @if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fa fa-check-circle me-2"></i>@ok
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fa fa-triangle-exclamation me-2"></i>@err
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="card-title mb-0">
                        <i class="fa fa-calendar-check me-2"></i>Rezervasyon Listesi
                    </h4>
                </div>

                <div class="table-responsive">
                    <table class="table table-glass-effect align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th><i class="fa fa-user me-2"></i>Misafir</th>
                                <th><i class="fa fa-envelope me-2"></i>Mail</th>
                                <th><i class="fa fa-door-open me-2"></i>Giriş</th>
                                <th><i class="fa fa-door-closed me-2"></i>Çıkış</th>
                                <th><i class="fa fa-users me-2"></i>Kişi</th>
                                <th><i class="fa fa-bed me-2"></i>Oda</th>
                                <th><i class="fa fa-info-circle me-2"></i>Durum</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (hasData)
                        {
                            foreach (var item in Model)
                            {
                                row++;
                                var statusClass = item.Status switch
                                {
                                    "Onaylandı"     => "success",
                                    "Beklemede"     => "warning",
                                    "İptal Edildi"  => "danger",
                                    _               => "primary"
                                };
                                <tr>
                                    <td class="fw-bold">@row</td>
                                    <td>@item.Name</td>
                                    <td class="text-muted small">@item.Mail</td>
                                    <td>@item.Checkin.ToString("dd.MM.yyyy")</td>
                                    <td>@item.CheckOut.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <span class="badge badge-primary badge-pill">
                                            @item.AdultCount Y / @item.ChildCount Ç
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary badge-pill">@item.RoomCount</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-@statusClass px-2">@item.Status</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="/BookingAdmin/ApprovedReservation2/@item.BookingID"
                                               class="btn btn-outline-success btn-sm"
                                               title="Onayla">
                                                <i class="fa fa-check"></i>
                                            </a>
                                            <a href="/BookingAdmin/CancelReservation/@item.BookingID"
                                               class="btn btn-outline-danger btn-sm"
                                               title="İptal Et"
                                               onclick="return confirm('Rezervasyonu iptal etmek istediğinize emin misiniz?');">
                                                <i class="fa fa-times"></i>
                                            </a>
                                            <a href="/BookingAdmin/WaitReservation/@item.BookingID"
                                               class="btn btn-outline-warning btn-sm"
                                               title="Beklemeye Al">
                                                <i class="fa fa-clock"></i>
                                            </a>
                                            <a href="/BookingAdmin/UpdateBooking/@item.BookingID"
                                               class="btn btn-outline-info btn-sm"
                                               title="Güncelle">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="/BookingAdmin/UpdateBooking/@item.BookingID"
                                               class="btn btn-outline-dark btn-sm"
                                               title="Detaylar">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4">
                                    <i class="fa fa-info-circle me-2"></i>Henüz rezervasyon kaydı bulunmuyor.
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>