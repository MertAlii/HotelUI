@model List<ResultStaffDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4">
    <table class="table table-sm table-glass-effect">
        <thead>
            <tr>
                <th>#</th>
                <th>Personel Adı</th>
                <th>Personel Ünvanı</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StaffId</td>
                    <td>@item.Name</td>
                    <td>@item.Title</td>
                    <td><a href="/Staff/DeleteStaff/@item.StaffId" class="btn btn-outline-danger btn-sm">Sil</a></td>
                    <td><a href="/Staff/UpdateStaff/@item.StaffId" class="btn btn-outline-success btn-sm">Güncelle</a></td>
                    <td><a href="/Staff/StaffDetails/@item.StaffId" class="btn btn-outline-info btn-sm">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div> 