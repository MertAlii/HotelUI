@model UpdateStaffDto
@{
    ViewData["Title"] = "Personel Güncelle";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center mb-4">
                    <i class="fa fa-user-edit fa-2x text-success me-3"></i>
                    <div>
                        <h4 class="card-title mb-1">Personel Güncelle</h4>
                        <p class="text-muted mb-0">ID: @Model.StaffId - Personel bilgilerini düzenleyin</p>
                    </div>
                </div>

                <form method="post" class="needs-validation" novalidate>
                    <input type="hidden" name="StaffId" value="@Model.StaffId" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label class="form-label">
                                    <i class="fa fa-user me-2"></i>Personel Adı *
                                </label>
                                <input type="text" name="Name" class="form-control" 
                                       value="@Model.Name" placeholder="Ad ve soyad giriniz" required />
                                <div class="invalid-feedback">
                                    Lütfen personel adını giriniz.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-4">
                                <label class="form-label">
                                    <i class="fa fa-briefcase me-2"></i>Personel Ünvanı *
                                </label>
                                <input type="text" name="Title" class="form-control" 
                                       value="@Model.Title" placeholder="Ünvan giriniz" required />
                                <div class="invalid-feedback">
                                    Lütfen personel ünvanını giriniz.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label class="form-label">
                                    <i class="fab fa-facebook me-2"></i>Facebook
                                </label>
                                <input type="text" name="SocialMedia1" class="form-control" 
                                       value="@Model.SocialMedia1" placeholder="facebook.com/kullaniciadi veya tam URL" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label class="form-label">
                                    <i class="fab fa-twitter me-2"></i>Twitter
                                </label>
                                <input type="text" name="SocialMedia2" class="form-control" 
                                       value="@Model.SocialMedia2" placeholder="twitter.com/kullaniciadi veya tam URL" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label class="form-label">
                                    <i class="fab fa-linkedin me-2"></i>LinkedIn
                                </label>
                                <input type="text" name="SocialMedia3" class="form-control" 
                                       value="@Model.SocialMedia3" placeholder="linkedin.com/in/kullaniciadi veya tam URL" />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-save me-2"></i>Güncelle
                        </button>
                        <a href="/Staff/Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <a href="/Staff/StaffDetails/@Model.StaffId" class="btn btn-outline-info">
                            <i class="fa fa-eye me-2"></i>Detayları Görüntüle
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Form validation
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
