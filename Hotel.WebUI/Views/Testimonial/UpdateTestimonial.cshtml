@model UpdateTestimonialDto
@{
    ViewData["Title"] = "Referans Güncelle";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Referans Güncelle</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="TestimonialId" value="@Model.TestimonialId" />
                        
                        <div class="form-group mb-3">
                            <label class="form-label">Referans Adı</label>
                            <input type="text" name="Name" class="form-control" value="@Model.Name" required />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Referans Ünvanı</label>
                            <input type="text" name="Title" class="form-control" value="@Model.Title" required />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Referans Açıklaması</label>
                            <textarea name="Description" class="form-control" rows="4" required>@Model.Description</textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Referans Görseli (URL)</label>
                            <input type="text" name="Image" class="form-control" value="@Model.Image" required />
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                            <a href="/Testimonial/Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

